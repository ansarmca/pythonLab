class Book:
    def __init__(self, title, author, isbn):
        self.title = title
        self.author = author
        self.isbn = isbn

    def display_info(self):
        """Displays the details of the book."""
        print(f"Title: {self.title}\nAuthor: {self.author}\nISBN: {self.isbn}")

    def update_author(self, new_author):
        """Updates the author's name."""
        self.author = new_author
        print(f"Author of '{self.title}' has been updated to {new_author}.")


class Library:
    def __init__(self):
        self.books = []

    def add_book(self, book):
        """Adds a book to the library."""
        self.books.append(book)
        print(f"'{book.title}' by {book.author} added to the library.")

    def lend_book(self, title):
        """Lends a book if it is available in the library."""
        for book in self.books:
            if book.title == title:
                self.books.remove(book)
                print(f"'{title}' has been lent out.")
                return
        print(f"'{title}' is not available in the library.")

    def display_books(self):
        """Displays all available books in the library."""
        if self.books:
            print("\nAvailable books in the library:")
            for book in self.books:
                book.display_info()
                print("-" * 40)
        else:
            print("No books available in the library.")


# Demonstrating the classes

def main():
    # Create book objects
    book1 = Book("To Kill a Mockingbird", "Harper Lee", "9780061120084")
    book2 = Book("1984", "George Orwell", "9780451524935")
    book3 = Book("Moby Dick", "Herman Melville", "9781503280786")

    # Create library object
    library = Library()

    # Add books to the library
    library.add_book(book1)
    library.add_book(book2)
    library.add_book(book3)

    # Display all available books
    library.display_books()

    # Update the author's name of a book
    book1.update_author("Lee Harper")

    # Display updated book info
    print("\nUpdated Book Details:")
    book1.display_info()

    # Lend a book
    library.lend_book("1984")

    # Display available books after lending
    library.display_books()
main()
