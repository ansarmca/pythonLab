class MenuOperations:
    def occurrence(self):
        sentence = input("Enter a sentence: ")
        words = sentence.split()
        word_count = {}
        
        for word in words:
            word_count[word] = word_count.get(word, 0) + 1
        
        print("\nWord Occurrence:")
        for word, count in word_count.items():
            print(f"{word}: {count}")
    
    def frequency(self):
        word = input("Enter a word: ").upper()
        char_count = {}
        
        for char in word:
            char_count[char] = char_count.get(char, 0) + 1
        
        print("\nCharacter Frequency:")
        for char, count in char_count.items():
            print(f"{char}: {count}")
    
    def factors(self):
        number = int(input("Enter a number: "))
        print("\nFactors:")
        for i in range(1, number + 1):
            if number % i == 0:
                print(i, end=" ")
        print()  # New line after factors

def main():
    operations = MenuOperations()
    
    while True:
        print("\nMenu:")
        print("1. Occurrence of word")
        print("2. Character frequency")
        print("3. Factors")
        print("4. Exit")
        choice = int(input("Please Enter a choice from the menu: "))
        
        if choice == 1:
            operations.occurrence()
        elif choice == 2:
            operations.frequency()
        elif choice == 3:
            operations.factors()
        elif choice == 4:
            print("Exiting the program. Goodbye!")
            break
        else:
            print("Invalid choice. Please select a valid option.")

if __name__ == "__main__":
    main()
